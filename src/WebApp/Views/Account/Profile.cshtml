@model WebApp.Models.Account.ProfileViewModel

@{
    ViewBag.Title = "Profile";
}

<div class="row mb-5">

    <div class="col-8 shadow-lg p-0 bg-white" style="font-size: 1.2em;">
        <div class="card">
            <div class="card-header">
                <h3>Profile</h3>
            </div>
            <div class="card-body">

                <div class="container">
                    <p><span class="profileInfo">First Name: </span>@Model.Firstname</p>
                    <p><span class="profileInfo">Second Name:</span> @Model.Lastname</p>
                    <p><span class="profileInfo">Millde Name: </span>@Model.Patronomic</p>
                    <p><span class="profileInfo">Email: </span>@Model.Email</p>
                    <p><span class="profileInfo">Address: </span>@Model.Address</p>
                    <p><span class="profileInfo">Postcode: </span>@Model.Postcode</p>
                    <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="Edit">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="ChangePassword">Change Password</a>
                </div>

            </div>
        </div>
    </div>

    <div class="col-4">
        <div class="shadow-lg p-3 bg-white">
            <div class="card">
                <div class="card-img-wrapper">
                    <img class="card-img-top" style="height: 300px; width: 100%;" src="@Model.Path" alt="@Model.Email" />
                </div>
                <form class="mt-3 ml-2" method="post" asp-action="ChangePath" enctype="multipart/form-data">
                    <div>
                        <h4>Change photo</h4>
                    </div>

                    <label id="lbUpProfile" for="upload-photo">Browse... (upload-photo)</label>
                    <input type="file" name="uploadedFile" id="upload-photo" />

                    <input name="path_" type="hidden" asp-for="Path" /><br />
                    <div class="mb-2">
                        <input onclick="if (!confirm('Are you sure you want to change this Item?')) { return false }" type="submit" value="Edit image" class="btn btn-sm btn-success" />
                    </div>
                </form>
               
            </div>
        </div>
    </div>

</div>
<br/>

