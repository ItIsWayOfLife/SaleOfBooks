@model WebApp.Models.Book.EditBookGenreViewModel

@{
    ViewBag.Title = "Edit book";
}

<div class="row mb-5">
    <div class="col-6 m-auto">
        <div class="card m-auto">
            <div class="card-header">
                <h3>Edit book</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Book" asp-action="Edit"
                      asp-route-sortString="@ViewBag.SortString"
                      asp-route-stringGenre="@ViewBag.StringGenre"
                      asp-route-searchFor="@ViewBag.SearchFor"
                      asp-route-nameSearch="@ViewBag.NameSearch"
                      asp-route-isDisplay="@ViewBag.IsDisplay" enctype="multipart/form-data">

                    <input type="hidden" asp-for="BookViewModel.Path" />
                    <input type="hidden" asp-for="BookViewModel.Id" />

                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    @if (Model.BookViewModel.Path != null)
                    {
                        <div class="form-group col-12">
                            <br />  <img class="pl-3" style="width:15em; height:12em;" src="@Model.BookViewModel.Path" alt="@Model.BookViewModel.Name" /><br /><br />
                        </div>
                    }

                    <div class="form-group col-12">
                        <label for="file">Image</label>
                        <input type="file" name="uploadedFile" id="file" /><br />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="BookViewModel.Name"></label>
                        <span class="text-danger" asp-validation-for="BookViewModel.Name"></span><br />
                        <input class="form-control" asp-for="BookViewModel.Name" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="BookViewModel.Info"></label>
                        <span class="text-danger" asp-validation-for="BookViewModel.Info"></span><br />
                        <textarea rows="5" class="form-control" asp-for="BookViewModel.Info"></textarea>
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="BookViewModel.Code"></label>
                        <span class="text-danger" asp-validation-for="BookViewModel.Code"></span><br />
                        <input class="form-control" asp-for="BookViewModel.Code" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="BookViewModel.Author"></label>
                        <span class="text-danger" asp-validation-for="BookViewModel.Author"></span><br />
                        <input class="form-control" asp-for="BookViewModel.Author" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="BookViewModel.Price"></label>
                        <span class="text-danger" asp-validation-for="BookViewModel.Price"></span><br />
                        <input class="form-control" asp-for="BookViewModel.Price" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="BookViewModel.PublishingHouse"></label>
                        <span class="text-danger" asp-validation-for="BookViewModel.PublishingHouse"></span><br />
                        <input class="form-control" asp-for="BookViewModel.PublishingHouse" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="BookViewModel.YearOfWriting"></label>
                        <span class="text-danger" asp-validation-for="BookViewModel.YearOfWriting"></span><br />
                        <input class="form-control" asp-for="BookViewModel.YearOfWriting" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="BookViewModel.YearPublishing"></label>
                        <span class="text-danger" asp-validation-for="BookViewModel.YearPublishing"></span><br />
                        <input class="form-control" asp-for="BookViewModel.YearPublishing" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="BookViewModel.IsFavorite"></label>
                        <span class="text-danger" asp-validation-for="BookViewModel.IsFavorite"></span><br />
                        <input class="form-control" asp-for="BookViewModel.IsFavorite" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="BookViewModel.IsDisplay"></label>
                        <span class="text-danger" asp-validation-for="BookViewModel.IsDisplay"></span><br />
                        <input class="form-control" asp-for="BookViewModel.IsDisplay" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="BookViewModel.IsNew"></label>
                        <span class="text-danger" asp-validation-for="BookViewModel.IsNew"></span><br />
                        <input class="form-control" asp-for="BookViewModel.IsNew" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="BookViewModel.Genre"></label>
                        <span class="text-danger" asp-validation-for="BookViewModel.Genre"></span><br />
                        <select class="form-control" asp-items="Model.Genres" asp-for="BookViewModel.Genre"></select>
                    </div>

                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-primary">Edit</button>
                        <a asp-controller="Book" asp-action="Index" asp-route-sortString="@ViewBag.SortString"
                           asp-route-stringGenre="@ViewBag.StringGenre"
                           asp-route-searchFor="@ViewBag.SearchFor"
                           asp-route-nameSearch="@ViewBag.NameSearch"
                           asp-route-isDisplay="@ViewBag.IsDisplay" class="btn btn-warning">Back</a>
                    </div><br />

                </form>
            </div>
        </div>
    </div>
</div>
