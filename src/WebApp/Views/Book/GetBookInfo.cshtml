@model WebApp.Models.Book.BookViewModel

@{
    ViewBag.Title = "Book information";
}

<div class="row mb-5">

    <div class="col-8 shadow-lg p-0 bg-white">
        <div class="card">
            <div class="card-header">
                <h3>
                    Book Information
                </h3>
            </div>
            <div class="card-body">
                <br />
                <div class="ml-5 mr-5" style="float:left;">

                    <h2>Name: <span class="font-weight-normal">@Model.Name</span> </h2>
                    @if (User.IsInRole("admin") || User.IsInRole("employee"))
                    {
                        <h5>Id: <span class="font-weight-normal">@Model.Id</span></h5>
                    }
                    <h5>Author: <span class="font-weight-normal">@Model.Author</span></h5>
                    <h5>Code: <span class="font-weight-normal">@Model.Code</span></h5>
                    <h5>Genre: <span class="font-weight-normal">@Model.Genre</span></h5>
                    <h5>Publishing house: <span class="font-weight-normal">@Model.PublishingHouse</span></h5>
                    <h5>Year publishing: <span class="font-weight-normal">@Model.YearPublishing</span></h5>
                    <h5>Year of writing: <span class="font-weight-normal">@Model.YearOfWriting</span></h5>
                    <h5>
                        Is new: @if (Model.IsNew)
                        {<span><span class="font-weight-normal">Yes</span></span>}
                        else
                        { <span><span class="font-weight-normal">No</span>No</span>}
                    </h5>
                    <h5>Info: <span class="font-weight-normal">@Model.Info</span></h5>
                    <h5>Price: <span class="text-danger">@Model.Price </span> $</h5>
                    <a class="btn btn-sm btn-success" asp-action="Add" asp-controller="Cart" asp-route-bookId="@Model.Id">Add to cart</a>
                    <a asp-controller="Book" asp-action="Index" 
                            asp-route-sortString="@ViewBag.SortString"
                            asp-route-stringGenre="@ViewBag.StringGenre"
                            asp-route-searchFor="@ViewBag.SearchFor" 
                            asp-route-nameSearch="@ViewBag.NameSearch" 
                            asp-route-isDisplay="@ViewBag.IsDisplay" class="btn btn-sm btn-warning">Back</a>
                    @if (User.IsInRole("admin") || User.IsInRole("employee"))
                    {
                        <form class="mt-2" asp-action="Delete" asp-route-id="@Model.Id"
                              asp-route-sortString="@ViewBag.SortString"
                            asp-route-stringGenre="@ViewBag.StringGenre"
                            asp-route-searchFor="@ViewBag.SearchFor" 
                            asp-route-nameSearch="@ViewBag.NameSearch" 
                            asp-route-isDisplay="@ViewBag.IsDisplay" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.Id" 
                            asp-route-sortString="@ViewBag.SortString"
                            asp-route-stringGenre="@ViewBag.StringGenre"
                            asp-route-searchFor="@ViewBag.SearchFor" 
                            asp-route-nameSearch="@ViewBag.NameSearch" 
                            asp-route-isDisplay="@ViewBag.IsDisplay">Edit</a>
                            <button onclick="if (!confirm('Are you sure you want to delete this Item?')) { return false }" type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    }
                </div>           
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="shadow-lg p-3 bg-white">
            <div class="card">
                <div class="card-img-wrapper">
                    <img class="card-img-top" style="height: 300px; width: 100%;" src="@Model.Path" alt="@Model.Name" />
                </div>
            </div>
        </div>
    </div>
</div>



