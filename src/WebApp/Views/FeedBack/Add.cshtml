
@{
    ViewBag.Title = "Ask a question";
}

<div class="row mb-5">
    <div class="col-6 m-auto">
        <div class="card m-auto">
            <div class="card-header">
                <h3>Ask a question</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="FeedBack" asp-action="Add">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group col-12">
                        <label for="question">Question</label>
                        <textarea rows="5" class="form-control" required name="question" id="question"></textarea>
                    </div><br />

                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-primary">Add</button>
                        <a asp-controller="Feedback" asp-action="MyFeedBack" class="btn btn-warning">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
