@model WebApp.Models.FeedBack.ListFeedBackViewModel

@{
    ViewBag.Title = "Fedback answers";
}

<div class="row mb-5">
    <div class="col-12 shadow-lg p-0 bg-white">
        <div class="card">
            <div class="card-header">
                <h3>Fedback answers</h3>
            </div>
            <div class="card-body">
                <div class="container">
                    <form method="get">
                        <div>
                            <select name="active" asp-items="Model.ListActive" asp-for="Active"></select>
                            <input class="btn btn-sm btn-primary" type="submit" value="Select" />
                        </div>
                    </form>
                    <br />
                    <table class="table">
                        <tr><th>Active</th><th>User</th><th>Full name</th><th>Date</th><th>Question</th><th>Helper</th><th>Full name</th><th>Date</th><th>Answer</th><th></th></tr>

                        @{
                            foreach (var user in Model.FeedBackViews)
                            {
                                if (!user.IsAnswered)
                                {
                                    <tr style="color:red;">
                                        @await Html.PartialAsync("_FeedBackListHelper", user)
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        @await Html.PartialAsync("_FeedBackListHelper", user)
                                    </tr>
                                }
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
