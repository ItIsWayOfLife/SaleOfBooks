@model WebApp.Models.Genre.GenreViewModel

<div class="col-lg-3">
    <a asp-controller="Book" asp-action="Index" asp-route-stringGenre="@Model.Name"><h3>@Model.Name (@Model.CountBook books)</h3></a>
    @if (User.IsInRole("admin"))
    {
        <div class="btn-group" rold="group">
            <form method="post" asp-action="Delete" asp-controller="Genre" asp-route-id="@Model.Id">
                <a class="btn btn-sm btn-primary rounded-0" title="Edit" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-edit"></i></a>
                <button onclick="if (!confirm('Are you sure you want to delete this Item?')) { return false }" class="btn btn-sm btn-danger rounded-0" title="Delete" type="submit">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </form>
        </div>
    }
</div>