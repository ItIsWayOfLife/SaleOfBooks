@model WebApp.Models.Review.ListReviewViewModel

@{
    ViewBag.Title = "Reviews";
}

<div class="row mb-5">

    <div class="col-12 shadow-lg p-0 bg-white">
        <div class="card">
            <div class="card-header">
                <h3>Reviews</h3>
            </div>
            <div class="card-body">
                <div class="container">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-sm btn-primary" asp-controller="Review" asp-action="Add">Add review</a>
                        <br />
                        <br />
                    }
                    <table class="table center">
                        @{
                            foreach (var review in Model.ReviewViewModels)
                            {

                                @await Html.PartialAsync("_ReviewList", review)
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
