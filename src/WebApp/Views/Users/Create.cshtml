@model WebApp.Models.Users.CreateUserViewModel
@{
    ViewBag.Title = "Add user";
}

<div class="row mb-5">
    <div class="col-6 m-auto">
        <div class="card m-auto">
            <div class="card-header">
                <h3>Add user</h3>
            </div>
            <div class="card-body">
                <form method="post" autocomplete="off" asp-action="Create" asp-controller="Users">

                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group col-12">
                        <label asp-for="Firstname"></label>
                        <span class="text-danger" asp-validation-for="Firstname"></span><br />
                        <input class="form-control" type="text" asp-for="Firstname" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Lastname"></label>
                        <span class="text-danger" asp-validation-for="Lastname"></span><br />
                        <input class="form-control" type="text" asp-for="Lastname" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Patronomic"></label>
                        <span class="text-danger" asp-validation-for="Patronomic"></span><br />
                        <input class="form-control" type="text" asp-for="Patronomic" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Email"></label>
                        <span class="text-danger" asp-validation-for="Email"></span><br />
                        <input class="form-control" type="text" asp-for="Email" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Password"></label>
                        <span class="text-danger" asp-validation-for="Password"></span><br />
                        <input class="form-control" type="password" asp-for="Password" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Address"></label>
                        <span class="text-danger" asp-validation-for="Address"></span><br />
                        <input class="form-control" asp-for="Address" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Postcode"></label>
                        <span class="text-danger" asp-validation-for="Postcode"></span><br />
                        <input class="form-control" asp-for="Postcode" />
                    </div><br />

                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-primary">Add</button>
                        <a asp-controller="Users" asp-action="Index" class="btn btn-warning">Back</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>