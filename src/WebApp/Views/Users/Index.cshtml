@model WebApp.Models.Users.UserFilterListViewModel
@{
    ViewBag.Title = "Users";
}
<div class="center">
    <h1>Users</h1>
    <br />

    <form method="get">
        <div>
            <a class="btn btn-sm btn-success" asp-action="Create">Add user</a>
            <label>Search:</label>
            <select style="border-radius: 5px;" name="searchSelectionString" asp-items="Model.SearchSelection" asp-for="SearchSelectionString"></select>
            <label>Value: </label>
            <input name="name" asp-for="SeacrhString" />
            <input style="margin-top: -5px;" class="btn btn-sm btn-success" type="submit" value="Search" />
            <a style="margin-top: -5px;" class="btn btn-sm btn-danger" asp-action="Index">Refresh</a>
        </div>
    </form>
    <table class="table" style="margin-top: 10px;">
        <tr><th>Id</th><th>Email</th><th>Full name</th><th>Address</th><th>Postcode</th><th></th></tr>
        @{
            foreach (var user in Model.ListUsers.Users)
            {
                @await Html.PartialAsync("_UserList", user)
            }
        }
    </table>
</div>

