@model WebApp.Models.Users.UserViewModel

<tr>
    <td>@Model.Id</td>
    <td>@Model.Email</td>
    <td>@Model.FLP</td>
    <td>@Model.Address</td>
    <td>@Model.Postcode</td>
    <td class="text-right">
        <div class="btn-group-vertical" rold="group">
            <form asp-action="Delete" asp-route-id="@Model.Id" asp-route-searchSelectionString="@ViewData["SearchSelectionString"]" asp-route-seacrhString="@ViewData["SeacrhString"]" method="post">
                <a class="btn btn-sm btn-primary rounded-0" title="Edit" asp-action="Edit" asp-route-id="@Model.Id" asp-route-searchSelectionString="@ViewData["SearchSelectionString"]" asp-route-seacrhString="@ViewData["SeacrhString"]"><i style="width: 1.2em; height:1.2em;" class="fas fa-edit"></i></a>
                <a class="btn btn-sm btn-primary rounded-0" title="Change password" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@Model.Id" asp-route-searchSelectionString="@ViewData["SearchSelectionString"]" asp-route-seacrhString="@ViewData["SeacrhString"]"> <i style="width: 1.2em; height:1.2em;" class="fas fa-key"></i></a>
                <a class="btn btn-sm btn-primary rounded-0" title="Role management" asp-controller="Roles" asp-action="Edit" asp-route-userid="@Model.Id" asp-route-searchSelectionString="@ViewData["SearchSelectionString"]" asp-route-seacrhString="@ViewData["SeacrhString"]"><i style="width: 1.2em; height:1.2em;" class="fas fa-user-tag"></i></a>
                <button onclick="if (!confirm('Are you sure you want to delete this Item?')) { return false }" class="btn btn-sm btn-danger rounded-0" title="Delete" type="submit">
                    <i style="width: 1.2em; height:1.2em;" class="fas fa-trash-alt"></i>
                </button>
            </form>
        </div>
    </td>
</tr>
